<h1>Sign Up Confirmation</h1>

<div class="row">
    <div class="col-md-4">
      <h4> Are you sure these values are correct?</h4>
      <p>Name: <%= @user.name %></p>
      <p>Email: <%= @user.email %></p>
    </div>
 </div>

<div class ="row">
    <div class="col-md-1">
      <%= button_to "Yes", {controller: "users", action: "create", user: params[:user].permit!}, class: 'btn btn-success' %>
    </div>
    <div class="col-md-1">  
      <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-failure', :method => :get %>
    </div>
</div>
