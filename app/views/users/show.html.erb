 <div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
          <h2 class="media-heading"><%= @user.name %></h2>
          <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
          </small>
       </div>
     </div>
   </div>
 </div>
 
<% if user_has_no_posts? %>
  <h4><%= @user.name %> has not submitted any posts yet.</h2>
<% else %>
 <h2>Posts</h2>
 <%= render @user.posts %>
<% end %>
 
<% if user_has_no_comments? %>
  <h4><%= @user.name %> has not submitted any comments yet.</h2>
<% else %>
 <h2>Comments</h2>
 <%= render @user.comments %>
<% end %>

<h4>Favorites</h4>
<%= render partial: 'posts/favorite', locals: { favorite_posts: @favorite_posts } %>

